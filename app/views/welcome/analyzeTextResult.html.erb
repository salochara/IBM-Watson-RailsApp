<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">An√°lisis con Natural Language Understanding </h6>
  </div>
  <div class="card-body">
    <% @response["keywords"].each do |keyword| %>
      <h4 class="small font-weight-bold"><%= keyword["text"] %> <span class="float-right"> Count: <%= keyword["count"] %> | Relevance: <%= keyword["relevance"].round(2) %></span></h4>
      <div class="progress mb-4">
        <% keyword["relevance"] * 100 > 70 ? style_name = "progress-bar bg-success"  : style_name = "progress-bar bg-info" %>
        <div class="<%= style_name %>" role="progressbar" style="width: <%= keyword["relevance"] * 100%>%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    <% end %>
    <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>

  </div>
</div>